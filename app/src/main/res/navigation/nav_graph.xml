<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.rickandmortyapi.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_characterFragment"
            app:destination="@id/characterFragment"
            app:popUpTo="@id/searchFragment"
            app:restoreState="true"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.rickandmortyapi.ui.fragments.SavedFragment"
        android:label="fragment_saved"
        tools:layout="@layout/fragment_saved" >
        <action
            android:id="@+id/action_savedFragment_to_characterDbFragment"
            app:destination="@id/characterDbFragment"
            app:popUpTo="@id/savedFragment"
            app:restoreState="true"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.rickandmortyapi.ui.fragments.CharacterFragment"
        android:label="fragment_character"
        tools:layout="@layout/fragment_character" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/characterDbFragment"
        android:name="com.example.rickandmortyapi.ui.fragments.CharacterDbFragment"
        android:label="CharacterDbFragment" >
        <argument
            android:name="id_db"
            app:argType="integer" />
    </fragment>
</navigation>